import QtQuick 1.1

$$QML_IMPORT_QTCOMPONENTS

import \"unicomponents\"

Page {

    Header {
        id: header
        text: qsTr(\"About MeeBible\")
    }

    Flickable {
        id: flickable

        anchors.top: header.bottom
        anchors.left: parent.left
        anchors.right: parent.right
        anchors.bottom: parent.bottom

        clip: true

        contentWidth: width
        contentHeight: column.height + 20

        Column {
            id: column

            x: 10
            y: 10
            width: parent.width - 20

            spacing: 20


            Label {
                text: qsTr(\"The open source Bible reader\")

                wrapMode: Text.Wrap

                width: parent.width

                $$QML_SYMBIAN_THEME
            }

            Label {
                text: freeversion ? qsTr(\"If you want to support development, please consider buying <a href=\'http://store.ovi.com/content/215454\'>paid version</a>!\") : qsTr(\"Thank you for supporting development!\")

                visible: ! SYMBIAN

                width: parent.width

                color: freeversion ? \"#800000\" : \"#008000\"

                wrapMode: Text.Wrap

                onLinkActivated: Qt.openUrlExternally(link)

                $$QML_SYMBIAN_THEME
            }

            Label {
                text: qsTr(\"Homepage & sources:\")
                anchors.horizontalCenter: parent.horizontalCenter

                $$QML_SYMBIAN_THEME
            }

            Label {
                text: \'<html><style>a{color:\' + (settings.inverted ? \'#8080ff\' : \'#0000ff\') + \'}</style><a href=\"http://meebible.org\">MeeBible.org</a></html>\'
                anchors.horizontalCenter: parent.horizontalCenter

                font.pixelSize: 34

                wrapMode: Text.Wrap

                onLinkActivated: Qt.openUrlExternally(link)

                $$QML_SYMBIAN_THEME
            }

            Button {
                anchors.horizontalCenter: parent.horizontalCenter

                text: qsTr(\"Send your feedback\")

                height: 60

                Loader {
                    id: feedbackPage

                    function load() { source = \"FeedbackPage.qml\" }

                    function open() { load(); pageStack.push(item) }
                }

                onClicked: feedbackPage.open()

                $$QML_SYMBIAN_THEME
            }

            Label {
                text: qsTr(\"Read God\'s Word daily!\")
                anchors.horizontalCenter: parent.horizontalCenter

                wrapMode: Text.Wrap

                $$QML_SYMBIAN_THEME
            }

            Rectangle {
                height: 2
                width: parent.width
                color: \'#fff\'

                Rectangle {
                    height: 1
                    width: parent.width
                    color: \'#d6cfd6\'
                }
            }

            Label {
                text: \'<html><style>a{color:\' + (settings.inverted ? \'#8080ff\' : \'#0000ff\') + \'}</style>\' +
                    qsTr(\'Â© 2011 Ilya Skriblovsky\') + \'<br>E-Mail: <a href=\"mailto:ilya@meebible.org?subject=MeeBible\">ilya@meebible.org</a></html>\'
                width: parent.width

                onLinkActivated: Qt.openUrlExternally(link)

                wrapMode: Text.Wrap

                $$QML_SYMBIAN_THEME
            }

            Label {
                visible: SYMBIAN

                text: \"<html><style>a{color:\" + (settings.inverted ? \"#8080ff\" : \"#0000ff\") + \"}</style>\" +
                    qsTr(\"Beta testing: Simon Botes of \") + \"<a href=\\\"http://store.ovi.com/publisher/AppCRAFT\\\">AppCRAFT</a></html>\"
                width: parent.width

                onLinkActivated: Qt.openUrlExternally(link)

                wrapMode: Text.Wrap

                $$QML_SYMBIAN_THEME
            }

            Label {
                text: qsTr(\"Please contact us with any comments or suggestions or if you want to add new Bible or UI translations.\")

                width: parent.width

                wrapMode: Text.Wrap

                $$QML_SYMBIAN_THEME
            }
        }
    }
    ScrollDecorator { flickableItem: flickable }

    tools: ToolBarLayout {
        UniToolIcon {
            platformIconId: \"toolbar-back\"
            onClicked: pageStack.pop()
        }
    }
}
